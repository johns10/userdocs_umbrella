<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "step_type-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :args %>
  <%= multiple_select f, :args, ["Option 1": "option1", "Option 2": "option2"] %>
  <%= error_tag f, :args %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
