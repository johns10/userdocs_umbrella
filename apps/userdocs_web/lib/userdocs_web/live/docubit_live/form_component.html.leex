<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "document-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= hidden_input(f, :docubit_id, value: @docubit_id) %>

  <%= hidden_input(f, :document_version_id, value: @document_version_id) %>

  <%= Layout.select_input(f, :type_id,
    @select_lists.allowed_children,
    "control") %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
