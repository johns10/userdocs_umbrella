<h1>Show User</h1>

<%= if @live_action in [:edit, :options] do %>
  <%= live_modal @socket, UserDocsWeb.UserLive.FormComponent,
    id: @user.id,
    title: @page_title,
    action: @live_action,
    user: @user,
    select_lists: @select_lists,
    return_to: Routes.user_show_path(@socket, :show, @user) %>
<% end %>

<%= live_component(@socket, UserDocsWeb.UserLive.DefaultsAndSelections, [ current_user: @current_user ]) %>

<ul>
  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>
</ul>

<span><%= live_patch "Options", to: Routes.user_show_path(@socket, :options, @user), class: "button" %></span>
