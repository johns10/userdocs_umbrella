{
	"name": "UserDocs",
	"manifest_version": 2,
	"description": "Userdocs chrome extension",
	"version": "0.0",
	"background": {
    "scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "UserDocs"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
      "run_at": "document_end",
			"all_frames": false
		}
	],
	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>",
		"storage",
		"desktopCapture"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' 'unsafe-eval'; script-src-elem 'self' 'unsafe-eval'",
	"web_accessible_resources": [
		"index.html",
		"css/*",
		"bundle.js",
		"bundle.js.map",
		"browser.js",
		"commands.js"
  ]
}